<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <HorizontalScrollView
       android:id="@+id/Horizontal1"
       android:layout_width="match_parent"
       android:layout_height="200dp">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:orientation="horizontal">
          <TextView
              android:id="@+id/TV_banner"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Banner"
              android:drawableTop="@drawable/test"/>


       </LinearLayout>
   </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Horizontal1"
        android:weightSum="12">

        <Button
            android:id="@+id/btn1"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="4"
            android:layout_marginTop="@dimen/button_margin"
            android:text="Pinjam Kelas"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="4"
            android:layout_marginTop="@dimen/button_margin"
            android:text="Parikir"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="4"
            android:layout_marginTop="@dimen/button_margin"
            android:text="Jadwal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_2"
        android:weightSum="10">

        <Button
            android:id="@+id/btn4"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="5"
            android:layout_marginTop="@dimen/button_margin"
            android:text="Kelas"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="@dimen/button_padding"
            android:layout_height="@dimen/button_padding"
            android:layout_weight="5"
            android:layout_marginTop="@dimen/button_margin"
            android:text="kendaraan"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_below="@+id/linear_layout_3">

        <ImageView
            android:id="@+id/iv_logo3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="100dp">

            <TextView
                android:id="@+id/tv_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Berita"
                android:ems="10"/>

            <TextView
                android:id="@+id/tv_nama2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity=""
                android:text="Isi Berita" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_4">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="100dp">

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Berita"
                android:ems="10"/>

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity=""
                android:text="Isi Berita" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>